<h1> Our cocktails</h1>
<div class="container">
  <ul>
    <%  @cocktails.each do |cocktail|%>
    <div class="card-product">
      <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
      <h2><%= cocktail.name %></h2>
      <%= link_to 'See cocktails details', cocktail_path(cocktail), class: "btn btn-primary" %>
    </div>
  </div>
    <% end %>
  </ul>

  <%= link_to 'Create a new cocktail', new_cocktail_path, class: "btn btn-primary" %>

</div>
